#!ipxe

set repo https://mirror.init7.net/centos/8/BaseOS/x86_64/os

imgfree
kernel ${repo}/images/pxeboot/vmlinuz console=ttyS1,115200 initrd=initrd.img ks=https://raw.githubusercontent.com/leoluk/netboot/master/centos8-packet.ks
initrd ${repo}/images/pxeboot/initrd.img
echo
echo MD5sums:
md5sum vmlinuz initrd.img
boot
